{
  "name": "boilerplate-express-react-ts",
  "version": "1.0.2",
  "private": true,
  "main": "dist/server/index.js",
  "scripts": {
    "postinstall": "npm run build",
    "prestart": "npm run build:tailwind",
    "start": "node server dist/server/index.js",
    "prebuild": "npm run build:tailwind",
    "build": "run-p build:client build:server",
    "build:watch": "tsc --build ./ --watch",
    "build:client": "tsc --build ./src/client",
    "build:watch:client": "tsc --build ./src/client --watch",
    "build:server": "tsc --build ./src/server",
    "build:watch:server": "tsc --build ./src/server --watch",
    "build:tailwind": "tailwindcss build -i src/client/stylesheets/index.css -o src/server/public/stylesheets/index.css -c ./tailwind.config.js",
    "predev": "npm run build:tailwind",
    "dev": "run-p build:watch:client build:watch:server dev:client dev:server",
    "dev:client": "npm run webpack -- --watch",
    "dev:server": "nodemon --watch server dist/server/index.js",
    "webpack:prod": "npm run webpack -- --mode production",
    "webpack": "webpack --config ./webpack.config.ts",
    "lint": "eslint --fix --ext .js,.jsx,.ts,.tsx ./src"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "classnames": "^2.3.1",
    "cookie-parser": "^1.4.5",
    "debug": "~4.3.2",
    "dotenv": "^10.0.0",
    "express": "~4.17.1",
    "morgan": "~1.10.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "redux": "^4.1.0",
    "redux-thunk": "^2.3.0",
    "tailwindcss": "^2.2.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.7",
    "@babel/plugin-transform-runtime": "7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@testing-library/react": "12.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.2",
    "@types/node": "^16.0.0",
    "@types/react-dom": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.6",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "mini-css-extract-plugin": "^2.1.0",
    "nodemon": "^2.0.9",
    "npm-run-all": "^4.1.5",
    "style-loader": "^3.0.0",
    "postcss-loader": "^6.1.1",
    "precss": "^4.0.0",
    "autoprefixer": "^10.3.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5",
    "webpack": "^5.43.0",
    "webpack-cli": "^4.7.2"
  }
}
